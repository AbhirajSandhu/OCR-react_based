<%- include ("partials/header") %>

<div class="container">
<h1 class="text-center">
	Edit Form <i class="edit icon"></i>
</h1>
	<div style="width:30%; margin: 70px auto;">
<form action="/myform/<%= data._id %>?_method=PUT" method="POST">
	<div class="form-group"><strong>Name</strong><i class="arrow right icon"></i>
		<input class="form-control" type="text" name="data[name]" value="<%= data.name %>"> 
	</div>
	<div class="form-group"><strong>Rollno</strong><i class="arrow right icon"></i>
		<input class="form-control" type="text" name="data[rollno]" value="<%= data.rollno%>" min="1000" step="100">
	</div>
	<div class="form-group"><strong>Department</strong><i class="arrow right icon"></i>
		<input class="form-control" type="text" name="data[dept]" value="<%= data.dept %>">
	</div>
	<div class="form-group">
		<button class="btn btn-lg btn-primary btn-block">Submit
	</button>
	</div>

</form>
<a href="/myform/<%= data._id %>">Go Back</a>		
	</div>	
</div>
<%- include ("partials/footer") %>